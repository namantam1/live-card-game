{
  "name": "call-break-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Call Break card game monorepo - client, server, and shared packages",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/client",
    "dev:shared": "npm run dev --workspace=packages/shared",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:all": "npm run dev:server & npm run dev",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=packages/client",
    "build:server": "npm run build --workspace=packages/server",
    "build:shared": "npm run build --workspace=packages/shared",
    "start:server": "npm run start --workspace=packages/server",
    "test": "npm run test --workspaces --if-present",
    "test:client": "npm run test --workspace=packages/client",
    "test:server": "npm run test --workspace=packages/server",
    "test:shared": "npm run test --workspace=packages/shared",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules",
    "clean:build": "rm -rf packages/*/dist",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "version:patch": "npm version patch --workspaces && npm version patch",
    "version:minor": "npm version minor --workspaces && npm version minor",
    "version:major": "npm version major --workspaces && npm version major"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
