{
  "name": "call-break-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Call Break card game monorepo - client, server, and shared packages",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/client",
    "dev:shared": "npm run dev --workspace=packages/shared",
    "dev:server": "npm run dev:shared & npm run dev --workspace=packages/server",
    "dev:all": "npm run dev:shared & npm run dev:server & npm run dev",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=packages/client",
    "build:server": "npm run build:shared && npm run build --workspace=packages/server",
    "build:shared": "npm run build --workspace=packages/shared",
    "test": "npm run test --workspaces --if-present",
    "test:client": "npm run test --workspace=packages/client",
    "test:server": "npm run test --workspace=packages/server",
    "test:shared": "npm run test --workspace=packages/shared",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules",
    "clean:build": "rm -rf packages/*/dist"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
